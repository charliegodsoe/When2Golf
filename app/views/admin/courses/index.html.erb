<h1>Listing courses</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Location</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @courses.each do |course| %>
  <tr>
    <td><%= course.name %></td>
    <td><%= course.description %></td>
    <td><%= course.location %></td>
    <td><%= link_to 'Show', [:admin, course] %></td>

    	<td><%= link_to 'Edit', edit_admin_course_path(course) %></td>
    	<td><%= button_to 'Destroy', [:admin, course], :confirm => 'Are you sure?', :method => :delete %></td>

  </tr>
<% end %>
</table>

<br />

<% if has_owner_privileges?%>
	<%= link_to 'New Course', new_admin_course_path %>
<% end %>
