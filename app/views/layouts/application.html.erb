<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%= csrf_meta_tag %>
	<%= stylesheet_link_tag 'custom', :media => 'screen' %>
	<%= javascript_include_tag :all %>
  </head>
  <body>
    <div class="container">
      <%= render 'layouts/header' %>
      <section class="round">
	        <% flash.each do |key, value| %>
	          <div class="flash <%= key %>"><%= value %></div>
	        <% end %>
	        <%= yield %>
	  </section>
      <%= render 'layouts/footer' %>
      <%= debug(params) if Rails.env.development? %>
	  <%= "Current User: #{current_user.id} - #{current_user.name}" if Rails.env.development? and signed_in? %>
    </div>
  </body>
</html>